<Window x:Class="View.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MessageDialog" Height="200" Width="200">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Greeting}" />
        <Button Grid.Row="1"  Command="{Binding HideMessageDialogCommand}" Height="40" Width="100" VerticalAlignment="Bottom" >Close</Button>
    </Grid>
</Window>
